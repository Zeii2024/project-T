
.text {
	font-size: 12px;
	color: #666;
	margin-top: 5px;
}
.uni-px-5 {
	padding-left: 10px;
	padding-right: 10px;
}
.uni-pb-5 {
	padding-bottom: 10px;
}
.uni-container {
	padding: 15px;
}
.uni-input-border,
.uni-textarea-border {
	width: 100%;
	font-size: 14px;
	color: #666;
	border: 1px #e5e5e5 solid;
	border-radius: 5px;
	box-sizing: border-box;
}
.uni-input-border {
	padding: 0 10px;
	height: 35px;
}
.uni-textarea-border {
	padding: 10px;
	height: 80px;
}
.uni-button-group {
	margin-top: 50px;

	display: flex;

	justify-content: center;
}
.uni-button {
	width: 184px;
}
.button {
@include flex;
	align-items: center;
	justify-content: center;
	flex: 1;
	height: 35px;
	margin: 0 5px;
	border-radius: 5px;
}
.button-text {
	color: #fff;
	font-size: 12px;
}

