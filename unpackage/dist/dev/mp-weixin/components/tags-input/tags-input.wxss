/* 外层div */
.father_box.data-v-26496a04 {
  width: 100%;
  box-sizing: border-box;
  background-color: white;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
  font-size: 12px;
  text-align: left;
  padding-left: 5px;
  word-wrap: break-word;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
}
.notVerify.data-v-26496a04 {
  border: 1px solid #f5222d;
}
.verify-text.data-v-26496a04 {
  color: #f5222d;
  font-size: 12px;
  transform: scale(0.9);
  margin-top: -10px;
  margin-left: -15px;
  height: 12px;
}
/* 已生成的标签 box */
.has-created.data-v-26496a04 {
  display: inline-block;
  font-size: 14px;
  margin: 3px 4px 3px 0;
  padding-right: 3px;
  background-color: #ecf5ff;
  border: 1px solid #e8eaec;
  border-radius: 3px;
  line-height: 24px;
}
/* 标签文字 */
.tag-title.data-v-26496a04 {
  height: 24px;
  line-height: 22px;
  max-width: 99%;
  position: relative;
  display: inline-block;
  padding-left: 8px;
  color: #409EFF;
  font-size: 14px;
  opacity: 1;
  vertical-align: middle;
  overflow: hidden;
  transition: 0.25s linear;
}
/* tag的叉叉 */
.i-close.data-v-26496a04 {
  padding: 2px;
  opacity: 1;
  filter: none;
  color: #409EFF;
  cursor: pointer;
  vertical-align: middle;
  font-size: 10px;
}
/* 鼠标经过叉叉 */
.i-close.data-v-26496a04:hover {
  background-color: #409EFF;
  border-radius: 50%;
  color: #fff;
}
/* input */
.input-tag.data-v-26496a04 {
  font-size: 16px;
  border: none;
  box-shadow: none;
  outline: none;
  background-color: transparent;
  padding: 0;
  flex-grow: 1;
  vertical-align: top;
  height: 30px;
  color: #495060;
  line-height: 32px;
}
/* 输入框提示文字大小 */
input.data-v-26496a04:-moz-placeholder-shown {
  font-size: 0.6rem;
}
input.data-v-26496a04:placeholder-shown {
  font-size: 0.6rem;
}

